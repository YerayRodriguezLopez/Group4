@page
@model RazorPage.Pages.ListShopsPageModel
@{
    ViewData["Title"] = "List Companies";
}
<style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8; 
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        header {
            background-color: #333;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        h1 {
            margin: 0;
            font-size: 2.5em;
        }


        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 20px;
        }
    </style>
<div>
    @if (!Model.Addresses.Any() || !Model.Companies.Any())
    {
            <p>No companies found.</p>
    }
    else
    {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name Company</th>
                        <th>Mail</th>
                        <th>Phone</th>
                        <th>Score</th>
                        <th>Location</th>
                        <th>Maps</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var address in Model.Addresses)
                {
                    @foreach (var company in Model.Companies)
                    {
                        @if (address.CompanyId == company.Id)
                        {
                                            <tr>
                                                <td>@company.Name</td>
                                                <td>@company.Mail</td>
                                                <td>@company.Phone</td>
                                                <td>@company.Score</td>
                                                <td>@address.Location</td>
                                                <td>
                                                    <button type="button" 
                                                            class="btn btn-primary" 
                                                            onclick="openGoogleMaps('@address.Location')">
                                                        GoogleMaps
                                                    </button>
                                                </td>
                                            </tr>
                        }
                    }
                }
                </tbody>
            </table>
    }
</div>

<script>
function openGoogleMaps(location) {
    // Crear URL para Google Maps usando la dirección como destino
    const googleMapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(location)}`;
    // Abrir en nueva pestaña
    window.open(googleMapsUrl, '_blank');
}
</script>